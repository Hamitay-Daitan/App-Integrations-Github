<messageML>
    <div class="entity">
        <card class="barStyle" iconSrc="img/github_logo.png" accent="gray">
            <header>
                <p>
                    <#if (entity['githubCommit'].user.name)??>
                        <span class="tempo-text-color--normal"><b>${entity['githubCommit'].user.name}</b> </span>
                    <#else>
                        <span class="tempo-text-color--normal"><b>${entity['githubCommit'].user.login}</b> </span>
                    </#if>
                    <span class="tempo-text-color--green">commented </span>
                    <span>on a <a href="${entity['githubCommit'].comment.url}">commit</a></span>
                </p>
            </header>
            <body>
                <div class="labelBackground badge">
                    <p>
                        <span class="tempo-text-color--secondary">Comment:</span>
                        <span class="tempo-text-color--normal"><b>${entity['githubCommit'].comment.body}</b></span>
                    </p>
                </div>
            </body>
        </card>
    </div>
</messageML>
