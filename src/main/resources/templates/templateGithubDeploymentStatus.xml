<messageML>
    <div class="entity" data-entity-id="githubDeploymentStatus">
        <card class="barStyle" iconSrc="${entity['githubDeploymentStatus'].URLIconIntegration}" accent="blue">
            <header>
                <span class="tempo-text-color--normal">Deployment on environment</span>
                <span class="tempo-text-color--normal"><b>${entity['githubDeploymentStatus'].deployment.environment}</b></span>
                <span class="tempo-text-color--green">changed its status to</span>
                <span class="tempo-text-color--green">StatusMetadata</span>
                <span class="tempo-text-color--normal">by</span>
                <span class="tempo-text-color--normal"><b>${entity['githubDeploymentStatus'].deployment.creator.login}</b></span>
                <span class="tempo-text-color--normal">in</span>
                <a class="tempo-text-color--link" href="${entity['githubDeploymentStatus'].repository.html_url}">${entity['githubDeploymentStatus'].repository.full_name}</a>
            </header>
            <body>
                <#if (entity['githubDeploymentStatus'].deployment.description)??>
                <div>
                    <span class="tempo-text-color--secondary">Deployment Description:</span>
                    <span>${entity['githubDeploymentStatus'].deployment.description}</span>
                </div>
                <br/>
            </#if>
            <div>
                <span class="tempo-text-color--secondary">SHA:</span>
                <span>${entity['githubDeploymentStatus'].deployment.sha}</span>
            </div>
        </body>
    </card>
</div>
</messageML>